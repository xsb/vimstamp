#!/bin/sh
#
# To use another vimrc file, create an
# environment variable before running this script:
# $ export VIMRC_URL="<alternative_url>"

VIMRC="$HOME/.vimrc"
BACKUP="$HOME/.vimrc.bak"

# Check if VIMRC_URL is already specified
if [ -z $VIMRC_URL ]; then
	VIMRC_URL="https://raw.githubusercontent.com/xsb/vimstamp/master/vimrc"
fi

# Check if vim config file exists
if [ -f $VIMRC ]; then
	mv $VIMRC $BACKUP
	echo ">> Saved $VIMRC as $BACKUP"
fi

# Write vim config file
curl -s $VIMRC_URL > $VIMRC
echo ">> Updated $VIMRC"
